%h3
  Alert

.row
  .col-md-2
    %strong
      Headline
  .col-md-10
    = @alert.headline

.row
  .col-md-2
    %strong
      Content
  .col-md-10
    %div{ style: 'border: 1px solid #A0A0A0; padding: 6px 10px' }
      = @alert.content.html_safe

.row
  .col-md-2
    %strong
      Registration
  .col-md-10
    = @alert.created_at.to_s(:long)
    = '(%s ago)' % time_ago_in_words(@alert.created_at)

.submit
  = link_to('Edit', edit_admin_alert_path(@alert), class: 'btn btn-sm btn-default')
  - if (@alert.published?)
    = link_to('Unpublish', unpublish_admin_alert_path(@alert), method: :put, class: 'btn btn-sm btn-warning')
  - else
    = link_to('Publish', publish_admin_alert_path(@alert), method: :put, class: 'btn btn-sm btn-success')
  = link_to('Delete', admin_alert_path(@alert), class: 'btn btn-sm btn-danger', confirm: 'Are you sure you want to delete this alert?', method: :delete)
